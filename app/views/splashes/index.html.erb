<% if !current_user %>
<div class="locked">
  <div class="front-button">
    <%= link_to "Sign In", new_user_session_path %>
  </div>

</div>
<% else %>
  <h2>All Photos</h2>

  <% if @photos.any? %>

      <% @photos.each do |pic| %>
      <div class="panel">
        <div class="panel-heading">
          <h4><%= pic.user.email %></h4>
        </div>
        <div class="panel-body">
          <%= image_tag(pic.file(:medium))%>
        </div>
        <div class="panel-footer">
          <p><%= pic.caption %></p>
          <hr>
          <p>Eventual stats</p>
        </div>
      </div>

      <br>
      <% end %>

  <% else %>
    <h3>No one has uploaded any photos yet.</h3>
  <% end %>
<% end %>
